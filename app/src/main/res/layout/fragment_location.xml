<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LocationFragment">


    <TextView
        android:id="@+id/tvCercade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerca de:"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:layout_marginTop="@dimen/common_padding_default"
        android:layout_marginLeft="@dimen/common_padding_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicacion del sujeto"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginLeft="@dimen/common_padding_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCercade"
        />

    <TextView
        android:id="@+id/tvDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DirecciÃ³n "
        android:layout_marginTop="@dimen/common_padding_default"
        android:textAppearance="?attr/textAppearanceBody1"
        android:layout_marginLeft="@dimen/common_padding_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLocation"
        />

    <TextView
        android:id="@+id/tvOrientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orientacion"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintStart_toEndOf="@id/tvDirection"
        app:layout_constraintBottom_toBottomOf="@id/tvDirection"/>

</androidx.constraintlayout.widget.ConstraintLayout>