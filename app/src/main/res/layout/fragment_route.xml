<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RouteFragment"
    android:padding="16dp">


    <TextView
        android:id="@+id/textViewInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="@dimen/common_padding_default"
        android:text="trazando ruta..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivArrow"
        />

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/straight"
        tools:layout_editor_absoluteY="87dp"
        app:layout_constraintTop_toBottomOf="@id/textViewInstructions"
        app:layout_constraintStart_toStartOf="@id/textViewInstructions"
        app:layout_constraintEnd_toEndOf="@id/textViewInstructions"
        android:scaleType="centerCrop"
        app:layout_constraintWidth="200sp"
        app:layout_constraintHeight="200sp"/>

    <LinearLayout
        android:id="@+id/lyBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ivArrow"
        app:layout_constraintStart_toStartOf="@id/textViewInstructions"
        app:layout_constraintEnd_toEndOf="@id/textViewInstructions">

        <Button
            android:id="@+id/btnAddHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Casa"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnRemoveHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quitar Casa"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnStartReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar Retorno"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvHomeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="@dimen/common_padding_default"
        android:text="No hay una casa guardada"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lyBotones"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>